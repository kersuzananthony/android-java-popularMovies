<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kersuzananthony.popularmovies.activities.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_main_recycler_view_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/activity_main_tv_error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_padding"
        android:text="@string/error_message"
        android:textSize="@dimen/activity_default_text_size"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <ProgressBar
        android:id="@+id/activity_main_pb_loading_indicator"
        android:layout_height="@dimen/progress_bar_dim"
        android:layout_width="@dimen/progress_bar_dim"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>
